
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // NOTICE: url line is gone!
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  category    String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())

  @@index([category])
  @@index([price])
}